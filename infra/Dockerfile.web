FROM python:3.11-slim

WORKDIR /app

# Install UI deps (new path)
COPY frontend/web/requirements.txt /app/frontend/web/requirements.txt
RUN pip install --no-cache-dir -r /app/frontend/web/requirements.txt

# Copy code
COPY frontend /app/frontend

ENV PYTHONUNBUFFERED=1
CMD ["python", "frontend/web/app.py"]
